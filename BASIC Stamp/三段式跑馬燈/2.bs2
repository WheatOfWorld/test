' {$STAMP BS2}
' {$PBASIC 2.5}

wstep VAR Byte
cnt VAR Byte

wstep = 0

DIRH = %11111111

cnt = 1

step1:
  DO WHILE (cnt <> (%10000000) )
    cnt = cnt * 2
    PAUSE 100
    OUTH = cnt
  LOOP

step2:
  DO WHILE (cnt <> %000000001 )
    cnt = cnt / 2
    PAUSE 100
    OUTH = cnt
  LOOP
  GOTO step1
