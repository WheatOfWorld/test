' {$STAMP BS2}
' {$PBASIC 2.5}

i VAR Byte
cnt VAR Byte

DIRH = %11111111

DO

  FOR i = 0 TO 7 STEP 1
    LOOKUP i, [1, 3, 6, 12, 24, 48, 96, 192], cnt
    OUTH = cnt
    PAUSE 1000
  NEXT

  FOR i = 7 TO 0 STEP 0
    LOOKUP i, [1, 3, 6, 12, 24, 48, 96, 192], cnt
    OUTH = cnt
    i = i - 1
    PAUSE 1000
  NEXT

LOOP